@model QuanLyVienPhi.Models.Expenses;
@{
    ViewData["Title"] = "Sửa chi phí";
    if (ViewBag.Session == "Ad".ToLower().Trim())
    {
        Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    }
    else if (ViewBag.Session == "KT".ToLower().Trim())
    {
        Layout = "~/Views/Shared/_LayoutKeToan.cshtml";
    }
}

<div class="page-header">
    <div class="page-block">
        <div class="row align-items-center">
            <div class="col-md-12">
                <div class="page-header-title"></div>
                <ul class="breadcrumb">
                    @*<li class="breadcrumb-item"><a href="@Url.Action("KeToan")"><i class="feather icon-home"></i></a></li>*@
                    <li class="breadcrumb-item"><a href="@Url.Action("ChiPhi")">Chi phí</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("SuaChiPhi")">Sửa chi phí</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="col-sm-12">
    <div class="card">
        <div class="card-header">
            <h5>Sửa thông tin chi phí khám bệnh</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    @using (Html.BeginForm("SuaChiPhi", "ChiPhi", FormMethod.Post))
                    {
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="_nKhoanCP" class="control-label">Mã chi phí</label>
                            <input asp-for="_nKhoanCP" class="form-control" name="_nKhoanCP" />
                            <span asp-validation-for="_nKhoanCP" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="_sTenCP" class="control-label">Tên chi phí</label>
                            <input asp-for="_sTenCP" class="form-control" name="_sTenCP" />
                            <span asp-validation-for="_sTenCP" class="text-danger"></span>
                        </div>
                        <input type="submit" value="Lưu" class="btn btn-primary feather icon-save">
                        <a asp-controller="ChiPhi" asp-action="ChiPhi"
                           class="btn btn-outline-secondary feather icon-corner-down-right">     Trở về</a>
                    }
                </div>
                <div class="col-md-6">
                    <form>
                        <div class="form-group">
                            <img src="~/Areas/assets/images/test_102328.png" alt="" style="width:50%; margin-left:130px;" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

