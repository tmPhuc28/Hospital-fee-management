
@{
    ViewData["Title"] = "Thêm tài khoản";
    if (ViewBag.Session == "Ad".ToLower().Trim())
    {
        Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    }
}

<div class="page-header">
    <div class="page-block">
        <div class="row align-items-center">
            <div class="col-md-12">
                <div class="page-header-title">

                </div>
                <ul class="breadcrumb">
                    @*<li class="breadcrumb-item"><a href="@Url.Action("KeToan")"><i class="feather icon-home"></i></a></li>*@
                    <li class="breadcrumb-item"><a href="@Url.Action("DSTaiKhoan")">Danh sách tài khoản</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("ThemTaiKhoan")">thêm tài khoản</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="col-sm-12">
    <div class="card">
        <div class="card-header">
            <h5>Thêm tài khoản</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    @using (Html.BeginForm("ThemTaiKhoan", "TaiKhoan", FormMethod.Post))
                    {
                        <div class="form-group">
                            <label>Tên đăng nhập</label>
                            <input type="text" class="form-control" name="_sTaiKhoan">
                        </div>
                        <div class="form-group">
                            <label>Mật khẩu</label>
                            <input type="password" class="form-control" name="_sMatKhau">
                        </div>
                        <div class="form-group">
                            <label for="exampleFormControlSelect1">Quyền</label>
                            <select class="form-control" id="exampleFormControlSelect1" name="_sMaLoai"
                                    asp-items="@(new SelectList(ViewBag.InfoAccGr,"Value","Text"))"></select>
                        </div>
                        <div class="form-group">
                            <label for="exampleFormControlSelect1">Nhân viên</label>
                            <select class="form-control" id="exampleFormControlSelect1" name="_sMANV"
                                    asp-items="@(new SelectList(ViewBag.InfoEmp,"Value","Text"))"></select>
                        </div>
                        <input type="submit" value="Lưu" class="btn btn-primary feather icon-save">
                        <a asp-controller="TaiKhoan" asp-action="DSTaiKhoan" class="btn btn-outline-secondary feather icon-corner-down-right">     Trở về</a>
                    }
                </div>
                <div class="col-md-6">
                    <form>
                        <div class="form-group">
                            <img src="~/Images/test_102328.png" alt="" style="width:50%; margin-left:130px;" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

