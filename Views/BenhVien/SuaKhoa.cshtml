@model QuanLyVienPhi.Models.Faculty;
@{
    ViewData["Title"] = "Sửa khoa";
    if (ViewBag.Session == "Ad".ToLower().Trim())
    {
        Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    }
    else if (ViewBag.Session == "KT".ToLower().Trim())
    {
        Layout = "~/Views/Shared/_LayoutKeToan.cshtml";
    }
}

<div class="page-header">
    <div class="page-block">
        <div class="row align-items-center">
            <div class="col-md-12">
                <div class="page-header-title">

                </div>
                <ul class="breadcrumb">
                    @*<li class="breadcrumb-item"><a href="#"><i class="feather icon-home"></i></a></li>*@
                    <li class="breadcrumb-item"><a href="@Url.Action("Khoa")">Khoa</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("SuaKhoa")">Sửa khoa</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="col-sm-12">
    <div class="card">
        <div class="card-header">
            <h5>Sửa khoa</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <img src="~/Images/medical-12_icon-icons.com_73944.png" alt="" style="width:50%; margin-left:130px;" />
                    </div>
                </div>
                <div class="col-md-6">
                    @using (Html.BeginForm("SuaKhoa", "BenhVien", FormMethod.Post))
                    {
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="_sMaKhoa" class="control-label">Mã khoa</label>
                            <input asp-for="_sMaKhoa" class="form-control" name="_sMaKhoa" />
                            <span asp-validation-for="_sMaKhoa" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="_sTenKhoa" class="control-label">Tên khoa</label>
                            <input asp-for="_sTenKhoa" class="form-control" name="_sTenKhoa" />
                            <span asp-validation-for="_sTenKhoa" class="text-danger"></span>
                        </div>
                        <input type="submit" value="Lưu" class="btn btn-primary feather icon-save">
                        <a asp-controller="BenhVien" asp-action="Khoa"
                           class="btn btn-outline-secondary feather icon-corner-down-right">     Trở về</a>
                    }
                </div>

            </div>
        </div>
    </div>
</div>


