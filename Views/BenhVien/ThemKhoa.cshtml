
@{
    ViewData["Title"] = "Thêm Khoa";
    if (ViewBag.Session == "Ad".ToLower().Trim())
    {
        Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    }
    else if (ViewBag.Session == "KT".ToLower().Trim())
    {
        Layout = "~/Views/Shared/_LayoutKeToan.cshtml";
    }
}

<!-- [ breadcrumb ] start -->

<div class="page-header">
    <div class="page-block">
        <div class="row align-items-center">
            <div class="col-md-12">
                <div class="page-header-title">

                </div>
                <ul class="breadcrumb">
                    @*<li class="breadcrumb-item"><a href="#"><i class="feather icon-home"></i></a></li>*@
                    <li class="breadcrumb-item"><a href="@Url.Action("Khoa")">Khoa</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("ThemKhoa")">Thêm khoa</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>
<div class="col-sm-12">
    <div class="card">
        <div class="card-header">
            <h5>Thêm khoa</h5>
        </div>
        <div class="card-body">
            <h5>Khoa</h5>
            <hr>
            <div class="row">
                <div class="col-md-6">
                    @using (Html.BeginForm("ThemKhoa", "BenhVien", FormMethod.Post))
                    {
                        <div class="form-group">
                            <label>Mã khoa</label>
                            <input type="text" class="form-control" name="_sMaKhoa">
                        </div>
                        <div class="form-group">
                            <label>Tên khoa</label>
                            <input type="text" class="form-control" name="_sTenKhoa">
                        </div>
                        <input type="submit" class="btn btn-primary feather icon-save" value="Lưu">
                        <a asp-controller="BenhVien" asp-action="Khoa" class="btn btn-outline-secondary feather icon-corner-down-right">     Trở về</a>
                    }
                </div>
                <div class="col-md-6">
                    <form>
                        <div class="form-group">
                            <img src="~/Images/medical-12_icon-icons.com_73944.png" alt="" style="width:50%; margin-left:130px;" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@{
    if (TempData["mgs"] != null)
    {
        <script>
                    alert(@TempData["mgs"]);
        </script>
    }
}