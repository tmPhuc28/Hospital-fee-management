
@{
    ViewData["Title"] = "Thêm bác sĩ";
    if (ViewBag.Session == "Ad".ToLower().Trim())
    {
        Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    }
    else if (ViewBag.Session == "KT".ToLower().Trim())
    {
        Layout = "~/Views/Shared/_LayoutKeToan.cshtml";
    }
}


<div class="page-header">
    <div class="page-block">
        <div class="row align-items-center">
            <div class="col-md-12">
                <div class="page-header-title">

                </div>
                <ul class="breadcrumb">
                    @*<li class="breadcrumb-item"><a href="#"><i class="feather icon-home"></i></a></li>*@
                    <li class="breadcrumb-item"><a href="@Url.Action("BacSi")">Bác sĩ</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("ThemBacSi")">Thêm bác sĩ</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="col-sm-12">
    <div class="card">
        <div class="card-header">
            <h5>Thêm mới bác sĩ</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    @using (Html.BeginForm("ThemBacSi", "BenhVien", FormMethod.Post))
                    {
                        <div class="form-group">
                            <label>Họ tên</label>
                            <input type="text" class="form-control" name="_sHoTen">
                        </div>
                        <div class="form-group">
                            <label>Ngày sinh</label>
                            <input type="date" class="form-control" name="_dNgaySinh">
                        </div>
                        <div class="form-group">
                            <label>Địa chỉ</label>
                            <input type="text" class="form-control" name="_sDiaChi">
                        </div>
                        <div class="form-group">
                            <label>Giới tính</label>
                            <input type="text" class="form-control" name="_sGioiTinh">
                        </div>
                        <div class="form-group">
                            <label>Số điện thoại</label>
                            <input type="text" class="form-control" name="_sSDT">
                        </div>
                        <div class="form-group">
                            <label>Email</label>
                            <input type="text" class="form-control" name="_sEmail">
                        </div>
                        <div class="form-group">
                            <label for="controlSelectDepartment">Phòng khám</label>
                            <select class="form-control" id="controlSelectDepartment" name="_nPhongKham"
                                    asp-items="@(new SelectList(ViewBag.InfoDepartment, "Value", "Text"))">
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="ontrolSelectFaculty">Khoa</label>
                            <select class="form-control" id="controlSelectFaculty" name="_sKhoa"
                                    asp-items="@(new SelectList(ViewBag.InfoFaculty, "Value", "Text"))">
                            </select>
                        </div>
                        <input type="submit" value="Lưu" class="btn btn-primary feather icon-save">
                        <a asp-controller="BenhVien" asp-action="BacSi" class="btn btn-outline-secondary feather icon-corner-down-right">     Trở về</a>
                    }
                </div>
                <div class="col-md-6">
                    <form>
                        <div class="form-group">
                            <img src="~/Images/test_102328.png" alt="" style="width:50%; margin-left:130px;" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@{
    if (TempData["mgs"] != null)
    {
        <script>
                    alert(@TempData["mgs"]);
        </script>
    }
}


