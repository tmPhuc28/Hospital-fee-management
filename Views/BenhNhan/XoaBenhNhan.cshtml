@model QuanLyVienPhi.Models.VPatients

@{
    ViewData["Title"] = "Xóa bệnh nhân";
    if (ViewBag.Session == "Ad".ToLower().Trim())
    {
        Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    }
    else if (ViewBag.Session == "KT".ToLower().Trim())
    {
        Layout = "~/Views/Shared/_LayoutKeToan.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_LayoutNhanVien.cshtml";
    }
}



<!-- [ breadcrumb ] start -->
<div class="page-header">
    <div class="page-block">
        <div class="row align-items-center">
            <div class="col-md-12">
                <div class="page-header-title">

                </div>
                <ul class="breadcrumb">
@*                    <li class="breadcrumb-item"><a asp-action="Index"><i class="feather icon-home"></i></a></li>*@
                    <li class="breadcrumb-item"><a asp-action="BenhNhan">Bệnh nhân</a></li>
                    <li class="breadcrumb-item"><a asp-action="XoaBenhNhan">Xóa bệnh nhân</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>
<div class="col-sm-12">
    <div class="card">
        <div class="card-header">
            <h5>Are you sure you want to delete this?</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    <dl class="row">
                        <dt class="col-sm-2">Mã bệnh nhân</dt>
                        <dd class="col-sm-10">
                            : @Html.DisplayFor(model => model._sMaBN)
                        </dd>
                        <dt class="col-sm-2">CMND</dt>
                        <dd class="col-sm-10">
                            : @Html.DisplayFor(model => model._sSoCMND)
                        </dd>
                        <dt class="col-sm-2">Họ tên</dt>
                        <dd class="col-sm-10">
                            : @Html.DisplayFor(model => model._sHoTen)
                        </dd>
                        <dt class="col-sm-2">Ngày sinh</dt>
                        <dd class="col-sm-10">
                            : @String.Format("{0:dd/MM/yyyy}", Model._dNgaySinh)
                        </dd>
                        <dt class="col-sm-2">Giới tính</dt>
                        <dd class="col-sm-10">
                            : @Html.DisplayFor(model => model._sGioiTinh)
                        </dd>
                        <dt class="col-sm-2">Điện thoại</dt>
                        <dd class="col-sm-10">
                            : @Html.DisplayFor(model => model._sSDT)
                        </dd>
                        <dt class="col-sm-2">Địa chỉ</dt>
                        <dd class="col-sm-10">
                            : @Html.DisplayFor(model => model._sDiaChi)
                        </dd>
                        <dt class="col-sm-2">Tên phòng khám</dt>
                        <dd class="col-sm-10">
                            : @Html.DisplayFor(model => model._sTenPK)
                        </dd>
                        <dt class="col-sm-2">Ngày khám</dt>
                        <dd class="col-sm-10">
                            : @String.Format("{0:dd/MM/yyyy}", Model._dNgayKham)
                        </dd>
                    </dl>
                    <a href="@Url.Action("XacNhan", "BenhNhan", new { id = Model._sMaBN})" class="btn btn-danger feather icon-trash-2"></a>
                    <a asp-controller="BenhNhan" asp-action="BenhNhan"
                       class="btn btn-outline-secondary feather icon-corner-down-right">     Trở về</a>
                </div>
            </div>
        </div>
    </div>
</div>
